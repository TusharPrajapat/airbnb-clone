<% layout("/layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <br />
    <h3>Create New Listing</h3>
    <br />
    <form method="post" action="/listings">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Add a Cachy Title"
          type="text"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <textarea name="listing[description]" class="form-control"></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          name="listing[image][url]"
          placeholder="Enter image URL/Link"
          type="text"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">price</label>
          <input
            name="listing[price]"
            placeholder="1200"
            type="number"
            class="form-control"
          />
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">country</label>
          <input
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">location</label>
        <input
          name="listing[location]"
          placeholder="Jaipur, rajasthan"
          type="text"
          class="form-control"
        />
      </div>

      <br />
      <button class="btn btn-dark add-btn">Add</button>
      <br />
      <br />
    </form>
  </div>
</div>
